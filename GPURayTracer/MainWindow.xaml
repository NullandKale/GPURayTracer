<Window x:Class="GPURayTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPURayTracer"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="SingleBorderWindow" WindowState="Maximized" Height="720" Width="1280" Background="Black" MouseMove="Window_MouseMove" MouseLeftButtonDown="Frame_MouseDown">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Image Name="Frame" Grid.Row="0" Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Label Name="FPS" Grid.Row="0" Content="0 fps" FontSize="24" Foreground="Green" Padding="30"/>
    </Grid>
</Window>
